<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_activated="true">
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			<stroke android:width="1dip" android:color="@color/selectedStenoBorder" />
			<solid android:color="@color/selectedStenoKey"  />
		</shape>
	</item>
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			<stroke android:width="1dip" android:color="@color/selectedStenoBorder" />
			<solid android:color="@color/selectedStenoKey"  />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<corners android:radius="5dp" />
			<stroke android:width="1dip" android:color="@color/stenoKeyBorder" />
			<solid android:color="@color/stenoKey"  />
		</shape>
	</item>
</selector>
